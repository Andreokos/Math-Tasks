<form class="col-md-6">
  <% @users.each do |user| %>
  <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
    <div class="col p-4 d-flex flex-column position-static">
      <strong class="d-inline-block mb-2 text-primary"><%= user.id %></strong>
      <h3 class="mb-0"><%= user.email %></h3>
      <div class="mb-1 text-muted"><%= user.created_at %></div>
      <p class="card-text mb-auto">ТУТ БУДЕТ РЕЙТИНГ</p>
      <%= link_to 'More', page_user_path(user), class: 'stretched-link' %>
    </div>
    <div class="col-auto d-none d-lg-block">
      <svg class="bd-placeholder-img" width="150" height="200"><rect width="100%" height="100%" fill="#55595c"></rect></svg>
    </div>
  </div>
  <% end %>
</form>
